<%- include("partils/header") %>
<div class="ui main text container segment ">
	<div class="ui huge header">New blog</div>
	<form  class=" ui form" action="/blogs" method="POST">
			<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="title of the blog">
			</div>
			<div class="field">
			<label>Image</label>
				<input type="text" name="blog[image]" placeholder="image of the blog">
			</div>
			<div class="field">
			<label>Blog content</label>
			<textarea name="blog[body]"></textarea>
			</div>
		<input class="ui secondary big button" type="submit">
	</form>
</div>
<%- include("partils/footer") %>